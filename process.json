{
    "apps": [
        {
            "name": "cautious",
            "script": "src/index.js",
            "watch": true,
            "ignore_watch": [
                "node_modules",
                "logs"
            ],
            "watch_options": {
                "followSymlinks": false
            },
            "env": {
                "NODE_ENV": "development",
                "instances": 1,
                "exec_mode": "fork"
            },
            "env_production": {
                "NODE_ENV": "production",
                "instances": "max",
                "exec_mode": "cluster"
            }
        }
    ]
}
